<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>edu.berkeley.cs.scads</groupId>
	<artifactId>scads</artifactId>
	<version>2.0-SNAPSHOT</version>
	<name>Scalable Consistency Adjustable Data Storage</name>
	<parent>
		<groupId>edu.berkeley.cs.radlab</groupId>
		<artifactId>ScalaProject</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>
	<packaging>pom</packaging>
	<modules>
		<module>piql</module>
		<module>scalaengine</module>
		<module>comm</module>
        <module>avro-compiler</module>
        <module>avro-maven-plugin</module>
		<module>experiments/client/generalclient</module>
		<module>experiments/client/performance/benchmarking</module>
		<module>experiments/client/performance/experiment-drivers</module>
		<module>experiments/client/performance/logparsing</module>
		<module>experiments/client/performance/querygen</module>
	</modules>
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.15</version>
		</dependency>
		<dependency>
			<groupId>org.scala-tools.testing</groupId>
			<artifactId>scalatest</artifactId>
			<version>0.9.5</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<includes>
					<include>test-log4j.properties</include>
				</includes>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemProperties>
						<property>
							<name>log4j.configuration</name>
							<value>test-log4j.properties</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
